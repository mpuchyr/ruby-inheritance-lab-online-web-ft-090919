#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"


some_knowledge = avi.teach 

steve.learn(some_knowledge)

puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"

# jim = User.new("Jim", "Davis")
# jim.learn(some_knowledge)

some_more_knowledge = avi.teach
if some_more_knowledge != some_knowledge
  steve.learn(some_more_knowledge)
end

puts "Steve just learned this important knowledge: '#{steve.knowledge[1]}' from Avi"

even_more_knowledge = avi.teach

robert = Student.new("Robert", "Baratheon")
robert.learn(even_more_knowledge)

puts "#{robert.first_name} just learn this knowledge: '#{robert.knowledge.first}' from Avi"

